<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>WPF_CraftingSystem</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Player.bmp" />
    <None Remove="Vendor.bmp" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Player.bmp" />
    <Resource Include="Vendor.bmp" />
  </ItemGroup>

</Project>
